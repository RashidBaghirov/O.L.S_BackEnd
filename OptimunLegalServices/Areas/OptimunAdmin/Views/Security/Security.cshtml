@using OptimunLegalServices.ViewModel;
@model ProfileVM

<div class="page-body">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Admin Setting</h5>
                </div>
                <div class="card-block">
                    <form class="form-material" asp-controller="security" asp-action="security" method="post">
                        <div class="form-group form-default">
                            <label>Username</label>
                            <input asp-for="UserName" class="form-control" value="@Model.UserName">

                            <span class="form-bar"></span>
                        </div>
                        <div class="form-group form-default">
                            <label>Email</label>
                            <input asp-for="Email" value="@Model.Email"  class="form-control" readonly>
                            <span class="form-bar"></span>
                      
                        </div>
                        <div class="form-group form-default">
                            <input asp-for="CurrentPassword"  class="form-control">
                            <span class="form-bar"></span>
                            <label class="float-label">CurrentPassword</label>
                        </div>
                        <div class="form-group form-default">
                            <input asp-for="NewPassword" class="form-control">
                            <span class="form-bar"></span>
                            <label class="float-label">New Password</label>
                        </div>
                        <div class="form-group form-default">
                            <input asp-for="ConfirmNewPassword" class="form-control">
                            <span class="form-bar"></span>
                            <label class="float-label">New Password Confirm</label>
                        </div>
                        <div class="save_button mb-0">
                            <button class="btn btn-submit submit" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>