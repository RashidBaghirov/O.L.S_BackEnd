@using OptimunLegalServices.ViewModel;
@{
    Layout = null;
}


@model LoginVM

@if (TempData["Security"] != null)
{
    if ((bool)TempData["Security"] == true)
    {
        <input type="hidden" id="securitySuccess" />
    }
    else
    {
        <input type="hidden" id="securityError" />
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/assets/images/07-01.jpg" sizes="32x32" />

    <link rel="stylesheet" href="~/assets/bootstrap-5.3.0-alpha1-dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/assets/css/login.css">
    <title>Admin Login</title>
</head>

    <body class="login-page">
        <div class="login-box">
            <h2 class="heading-login-box">Login</h2>
        <form asp-controller="AdminLogin" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="user-box">
                <input asp-for=UserName class="user-box-input" autocomplete="off">
                <label asp-for=UserName class="user-box-label">Username</label>

                </div>
                <div class="user-box">
                <input asp-for=Password class="user-box-input" autocomplete="off">
                <label asp-for=Password class="user-box-label">Password</label>
                </div>
                <a type="submit" class="login-box-button href_admin" href="#">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Submit
                </a>
                <button type="submit" class="sbmt_btn" style="display:none"></button>
            </form>
        </div>
    <script>
        var hrefAdminButton = document.querySelector('.href_admin');

        var sbmtButton = document.querySelector('.sbmt_btn');

        hrefAdminButton.addEventListener('click', function () {
            sbmtButton.click();
        });
    </script>
    </body>

</html>

@section Scripts{
    <script>
        $(document).ready(function () {
            if ($("#securitySuccess").length) {
                toastr["success"]("Uğurlu əməliyyət!", "Salam,Sizin İstifadəçi adı və ya Parol dəyişdirildi yenidən giriş edin.")
            }
            else if ($("#securityError").length) {
                toastr["error"]("Xəta baş verdi!", "Bağışlayın...")
            }
        })
    </script>
}
