@{
    ViewBag.Title = "Expertice";
}
@if (TempData["Subscribe"] != null)
{
    if ((bool)TempData["Subscribe"] == true)
    {
        <input type="hidden" id="subscribeSuccess" />
    }
    else
    {
        <input type="hidden" id="subscribeError" />

    }
}
<section id="expert">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="switch">
                    <ul class="breadcrumbs-list">
                        <li class="breadcrumb-item">
                            <a href="/index.html" title="Go to the frontpage">Home</a>
                        </li>
                        <li class="img-item">
                            <img src="./assets/images/arrow-right.svg" alt="" />
                        </li>
                        <li class="breadcrumb-item">
                            <a href="./expertice.html" title="Go to News">Expertice</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12">
                <div class="title">
                    <h3>What we do?</h3>
                </div>
            </div>
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="titles_expertice">
                            <p>
                                We know that the best advice encompasses more than legal
                                expertise alone. Different businesses and sectors face
                                different opportunities and challenges. Our market
                                strength and depth of experience allows us to be a
                                strategic partner to our clients and to tailor solutions
                                beyond the legal details.
                            </p>
                        </div>
                        <div class="image">
                            <img src="https://www.mannheimerswartling.se/app/uploads/2022/12/02-0045-2048x1365.jpg"
                                 alt="" />
                        </div>
                        <div class="infos">
                            <div class="info">
                                <p>
                                    We know that the best advice encompasses more than legal
                                    expertise alone. Different businesses and sectors face
                                    different opportunities and challenges. Our market
                                    strength and depth of experience allows us to be a
                                    strategic partner to our clients and to tailor solutions
                                    beyond the legal details.
                                </p>
                            </div>
                        </div>
                        <div class="practice_group">
                            <div class="practice_title">
                                <h4>Practice area</h4>
                            </div>
                            <div class="practice_area">
                                <ol>
                                    <li>Banking and Finance</li>
                                    <li>Construction</li>
                                    <li>Contentious Regulatory</li>
                                    <li>Corporate Commercial</li>
                                    <li>Corporate Investigations and Corporate Crime</li>
                                    <li>Corporate Sustainability and Risk Management</li>
                                    <li>Corporate Taxation</li>
                                    <li>Data Privacy</li>
                                    <li>Dispute Resolution</li>
                                    <li>Emerging and Growth Companies</li>
                                    <li>Employment and Pensions</li>
                                    <li>Environment</li>
                                    <li>EU and Competition</li>
                                    <li>Financial Regulation</li>
                                    <li>Funds and Investments</li>
                                    <li>Insurance</li>
                                    <li>Intellectual Property, Marketing and Media</li>
                                    <li>IT/Tech</li>
                                    <li>Mergers and Acquisitions</li>
                                    <li>Public M&A and Equity Capital Markets</li>
                                    <li>Public Procurement</li>
                                    <li>Real Estate</li>
                                    <li>Restructuring and Insolvency</li>
                                    <li>Trade</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script>
        $(document).ready(function () {
            if ($("#subscribeSuccess").length) {
                toastr["success"]("Successful operation!", "Hello, you will now receive updates about the page")
            }
            else if ($("#subscribeError").length) {
                toastr["error"]("An error occurred!", "This Email is already in use or due to another reason...")
            }

        })
    </script>
}