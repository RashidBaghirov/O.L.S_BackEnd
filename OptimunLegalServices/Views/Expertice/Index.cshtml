@{
    ViewBag.Title = "Expertice";
    List<PracticeArea> practiceAreas = ViewBag.Practice;
}
@model List<Expertice>
@if (TempData["Subscribe"] != null)
{
    if ((bool)TempData["Subscribe"] == true)
    {
        <input type="hidden" id="subscribeSuccess" />
    }
    else
    {
        <input type="hidden" id="subscribeError" />

    }
}
<section id="expert">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="switch">
                    <ul class="breadcrumbs-list">
                        <li class="breadcrumb-item">
                            <a href="/index.html" title="Go to the frontpage">Home</a>
                        </li>
                        <li class="img-item">
                            <img src="./assets/images/arrow-right.svg" alt="" />
                        </li>
                        <li class="breadcrumb-item">
                            <a href="./expertice.html" title="Go to News">Expertice</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12">
                <div class="title">
                    <h3>What we do?</h3>
                </div>
            </div>
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-6">
                        @foreach (Expertice expertice in Model)
                        {
                            <div class="ex">
                                <div class="titles_expertice">
                                    <p>
                                        @expertice.Titles_expertice
                                    </p>
                                </div>
                                <div class="image">
                                    <img src="~/assets/images/Expertice/@expertice.Image"
                                         alt="" />
                                </div>
                                <div class="infos">
                                    <div class="info">
                                        <p>
                                            @expertice.Infos
    
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="practice_group">
                            <div class="practice_title">
                                <h4>Practice area</h4>
                            </div>
                            <div class="practice_area">
                                <ol>
                                    @foreach (PracticeArea area in practiceAreas)
                                    {
                                        <li>@area.Name</li>
                                    }
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script{
    <script>
        $(document).ready(function () {
            if ($("#subscribeSuccess").length) {
                toastr["success"]("Successful operation!", "Hello, you will now receive updates about the page")
            }
            else if ($("#subscribeError").length) {
                toastr["error"]("An error occurred!", "This Email is already in use or due to another reason...")
            }

        })
    </script>
}