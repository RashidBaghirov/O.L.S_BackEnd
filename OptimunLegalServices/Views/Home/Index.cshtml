@inject OptimunLegalServices.Services.LayoutService layoutService
@{
    Dictionary<string, string> settings = layoutService.GetSettings();

}

@{
    Layout = null;
    List<Expertice> expertices = ViewBag.Expertice;
    List<Blog> blogs = ViewBag.News;

}
@if (TempData["Subscribe"] != null)
{
    if ((bool)TempData["Subscribe"] == true)
    {
        <input type="hidden" id="subscribeSuccess" />
    }
    else
    {
        <input type="hidden" id="subscribeError" />

    }
}
@if (TempData["Contact"] != null)
{
    if ((bool)TempData["Contact"] == true)
    {
        <input type="hidden" id="contactSuccess" />
    }
    else
    {
        <input type="hidden" id="contactError" />

    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="creat"
          content="rashidbaghirov@outlook.com /number:+994506988323" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/assets/images/07-01.jpg" sizes="32x32" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <title>Optimun Legal Services</title>
</head>
<body>
    <header class="header animate_animated">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12 d-flex justify-content-center align-items-center">
                    <div class="logos">
                        <a asp-controller="home" asp-action="index">
                            <img src="~/assets/images/@settings["Logo"]"
                                 alt="logo" />
                        </a>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <nav>
                        <ul>
                            <li>
                                <a asp-controller="expertice" asp-action="index">Expertice</a>
                            </li>
                            <li>
                                <a asp-controller="news" asp-action="index">News</a>
                            </li>
                            <li>
                                <a asp-controller="contact" asp-action="index">Contact</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <main>
        <section id="video">
            <div class="container-fluid">
                <div class="row">
                    <div class="wrapper">
                        <div class="hero_anchor">
                            <h2>@settings["WelcomeSentence"]</h2>
                            <a asp-controller="contact" asp-action="index"
                               target="_self"
                               title="Contact Us"
                               class="button button-white">
                                Contact Us
                            </a>
                        </div>
                    </div>
                    <div class="videos col-12 col-md-12 col-sm-12">
                        <video loop="" muted="" playsinline="" autoplay="">
                            <source src="~/assets/videos/O.L.S_2023_3.mp4"
                                    type="video/mp4" />
                            <p>Your browser does not support video.</p>
                        </video>
                    </div>
                </div>
            </div>
        </section>
        <section id="news">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="title">
                            <h3>@settings["Title_News"]</h3>
                        </div>
                    </div>
                    @foreach (Blog blog in blogs)
                    {
                        <div class="col-lg-4">
                            <div class="new">
                                <a asp-controller="news" asp-action="detail" asp-route-id="@blog.Id"
                                   title="@blog.Title">
                                    <img style="width: 400px; object-fit: contain"
                                         src="~/assets/images/Blogs/@blog.Image"
                                         class="responsive-img postentry_thumbnail wp-post-image" />
                                    <h2 class="postentry_title">
                                       @blog.Title
                                    </h2>
                                </a>
                                <time datetime="2023-06-30 12:26:42">@blog.Date.ToString("dd MMMM yyyy")</time>
                            </div>
                        </div>

                    }
                    <div class="col-12">
                        <div class="news_buttons">
                            <a asp-controller="news" asp-action="index">@settings["Button_news"]</a>
                        </div> 
                    </div>
                </div>
            </div>
        </section>
        <section id="expertise">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="title">
                            <h3>@settings["Expertice_Title"]</h3>
                        </div>
                    </div>
                    @foreach (Expertice expertice in expertices)
                    {
                        <div class="col-12">
                            <p class="preamble-large">
                                @expertice.Titles_expertice
                            </p>
                        </div>

                    }
                    <div class="col-12">    
                        <div class="expertise_buttons">
                            <a asp-controller="expertice" asp-action="index">@settings["Expertice_button"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section id="sustainability">
            <div class="wrapper">
                <div class="title">
                    <h2>@settings["Sea_Section_Title"]</h2>
                    <p>
                        @settings["Sea_Section_Text"]
                    </p>
                </div>
            </div>
        </section>
    </main>
    <footer id="footer">
        <div class="wrapper">
            <div class="title">
                <h2>
                    @settings["Footer-Questions"]
                </h2>
                <p>@settings["Subscribe_text"]</p>
                <form asp-controller="Home" asp-action="Subscribe">
                    <input name="email" type="email" class="subscribe" placeholder="Write Email" />
                    <button type="submit">Subscribe</button>
                </form>
                <a asp-controller="contact" asp-action="index">Contact us</a>
            </div>
            <div class="footer-bottom">
                <div class="info">
                    <p>
                        @settings["Footer_Office_address"]
                    </p>
                    <p>
                        @settings["Footer_Number"]
                    </p>
                </div>
                <div class="social-net">
                    <div class="linkedin">
                        <a href="@settings["Linkedin_Account"]" target="_blank">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-linkedin"
                                 viewBox="0 0 16 16">
