@{
    ViewBag.Title = "Contact";

}
@if (TempData["Subscribe"] != null)
{
    if ((bool)TempData["Subscribe"] == true)
    {
        <input type="hidden" id="subscribeSuccess" />
    }
    else
    {
        <input type="hidden" id="subscribeError" />

    }
}
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="switch">
                    <ul class="breadcrumbs-list">
                        <li class="breadcrumb-item">
                            <a asp-controller="home" asp-action="index" title="Go to the frontpage">Home</a>
                        </li>
                        <li class="img-item">
                            <img src="~/assets/images/arrow-right.svg"
                                 alt="" />
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="contact" asp-action="index" title="Go to Contact Us">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12">
                <div class="title">
                    <h3>Contact Us</h3>
                </div>
            </div>
            <form asp-action="Index">
                <div class="row">
                    <div class="col-6">
                        <div class="inputs">
                            <label> First name* </label>
                            <input name="name" type="text" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="inputs">
                            <label> Last name* </label>
                            <input name="surname" type="text" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="inputs">
                            <label> Number* </label>
                            <input name="phoneNumber" type="tel" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="inputs">
                            <label > Email* </label>
                            <input name="email" type="email" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="inputs">
                            <label > Options </label>
                            <select name="practiceId" asp-items="@(new SelectList(ViewBag.Area,"Id","Name"))">
                                   </select>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="inputs">
                            <label>Message*</label>
                            <textarea name="comment"></textarea>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info">
                            <p>
                                We would like to let you know in advance that we will
                                review your message and get back to you within 2 business
                                days
                            </p>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button class="submit_button">
                            Send Message
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Script{
    <script>
        $(document).ready(function () {
            if ($("#subscribeSuccess").length) {
                toastr["success"]("Successful operation!", "Hello, you will now receive updates about the page")
            }
            else if ($("#subscribeError").length) {
                toastr["error"]("An error occurred!", "This Email is already in use or due to another reason...")
            }

        })
    </script>
}